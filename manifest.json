{
  "manifest_version": 3,
  "name": "BigCommerce SKU Lookup for NetSuite",
  "description": "Detecta SKU (itemid) en NetSuite y busca Product/Variant ID en BigCommerce. Soporte de credenciales cifradas.",
  "version": "1.2.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.bigcommerce.com/*",
    "https://*.netsuite.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "BC SKU Lookup",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://*.netsuite.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}